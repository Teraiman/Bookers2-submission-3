<%= flash[:notice] %>
<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h2>User info</h2>
      <% if @user.errors.any? %>
        <%= @user.errors.count %>errors prohibited this obj from
        <% @user.errors.full_messages.each do |message| %>
          <%= message %>
        <% end %>
      <% end %>
      <%= form_with model:@user, local:true do |f| %>
        <div class="field">
          <%= f.label :name %></br>
          <%= f.text_field :name %>
        </div>
        <div class="field">
          <label for="inputImage">Image</label></br>
          <%= f.attachment_field :profile_image, placeholder: "プロフィール画像" %>
        </div>
        <div class="field">
          <%= f.label :introduction %></br>
          <%= f.text_area :introduction, class:"form-control" %>
        </div>

        <div class="field">
          <%= f.submit "Update User" %>
        </div>

      <% end %>
    </div>
  </div>
</div>