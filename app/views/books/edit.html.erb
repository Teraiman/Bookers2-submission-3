<%= flash[:notice] %>
<div class='container'>
  <div class='row'>
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
    <h1>Editing Book</h1>
    <% if @book.errors.any? %>
      <%= @book.errors.count %>errors prohibited this obj from
      <% @book.errors.full_messages.each do |message| %>
        <%= message %>
      <% end %>
    <% end %>
      <%= form_with model: @book, url: book_path, local: true do |f| %>
      <div class="field">
        <%= f.label :title %></br>
        <%= f.text_field :title, class:"form-control" %>
      </div>
      <div class="field">
        <%= f.label :opinion %></br>
        <%= f.text_area :body, class:"form-control" %>
      </div>
      <div class="actions">
        <%= f.submit "Update Book",class: "btn btn-sm btn-success" %>
      </div>
      <% end %>
      <%= link_to "Show", book_path(@book) %>
      |
      <%= link_to "Back", books_path %>

    </div>
  </div>
</div>