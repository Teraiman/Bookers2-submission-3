
<p id="notice"></p>
<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">
      <h2>User info</h2>
      <%= attachment_image_tag current_user, :profile_image, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpg" %>
      <table class="table">
        <tbody>
          <tr>
            <th>name</th>
            <th><%= current_user.name %></th>
          </tr>
          <tr>
            <th>introduction</th>
            <th><%= current_user.introduction %></th>
          </tr>
        </tbody>
      </table>
      <div class="row">
        <a class="btn btn-outline-secondary btn-block fas fa-user-cog" href="/books/:id/edit"></a>
      </div>
      <h2 class="mt-3">New book</h2>
      <%= form_with model: @book, url: books_path, local: true do |f| %>
      <div class="field">
        <%= f.label :title %></br>
        <%= f.text_field :title %>
      </div>
      <div class="field">
        <%= f.label :opinion %></br>
        <%= f.text_area :opinion, class:"form-control" %>
      </div>
      <div class="actions">
        <%= f.submit "Create Book",class: "btn btn-sm btn-success" %>
      </div>
      <% end %>
    </div>

    <div class="col-md-8 offset-md-1">
      <h2>Books</h2>
      <table class="table table-hover table-inverse">
        <thead>
          <tr>
            <th>Title</th>
            <th>Opinion</th>
            <th colspan="3"></th>
          </tr>
        </thead>
        
        <tbody>
          <% @books.each do |book| %>
          <tr>
            <th><%= book.title %></th>
            <th><%= book.body %></th>
          </tr>
          <% end %>
        </tbody>
        
      </table>
    </div>
  </div>
</div>