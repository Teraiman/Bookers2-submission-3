
<%= flash[:notice] %>
<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">

      <%= render 'books/userinfo', books: @books %>

      <div class="row">
        <a class="btn btn-outline-secondary btn-block fas fa-user-cog" href="/books/:id/edit"></a>
      </div>

      <h2 class="mt-3">New book</h2>
      <%= form_with model: @book, url: books_path, local: true do |f| %>
      <div class="field">
        <%= f.label :title %></br>
        <%= f.text_field :title %>
      </div>
      <div class="field">
        <%= f.label :opinion %></br>
        <%= f.text_area :body, class:"form-control" %>
      </div>
      <div class="actions">
        <%= f.submit "Create Book",class: "btn btn-sm btn-success" %>
      </div>
      <% end %>
    </div>

    <div class="col-md-8 offset-md-1">
      <h2>Books</h2>
      <table class="table table-hover table-inverse">
        <thead>
          <tr>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
            <th colspan="3"></th>
          </tr>
        </thead>

        <tbody>
          <% @books.each do |book| %>
          <tr>
            <td><%= attachment_image_tag current_user, :profile_image, size: "40x40", format: 'jpeg', fallback: "no_image.jpg", size: "40x40" %></td>
            <td><%= link_to book.title, book_path(book) %></td>
            <td><%= book.body %></td>
          </tr>
          <% end %>
        </tbody>

      </table>
    </div>
  </div>
</div>